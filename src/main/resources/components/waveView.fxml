<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.geometry.Insets?>
<?import com.nbmp.waveform.controller.component.LabeledComboBox?>
<AnchorPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.nbmp.waveform.controller.WaveController"
            stylesheets="@../stylesheets/waveView.css">
    <VBox AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <!-- Main Content -->
        <SplitPane VBox.vgrow="ALWAYS"><!-- Left Pane: Controls -->
            <ScrollPane fitToWidth="true" prefWidth="250">
                <VBox spacing="15" alignment="TOP_CENTER">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <!-- Waveform Type -->
                    <GridPane>
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0" />
                            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="307.0" minWidth="57" prefWidth="257.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        </rowConstraints>
                        <children>
                            <Label text="Duration" styleClass="label-bold"/>
                            <TextField fx:id="durationField" promptText="Duration" GridPane.columnIndex="1" onAction="#durationEntered" />
                        </children>
                    </GridPane>


                    <!-- Frequency -->
                    <Label text="Frequency:" styleClass="label-bold"/>
                    <Slider fx:id="frequencySlider" min="1" max="50" value="5"/>
                    <Label fx:id="sliderLabel" text="5 Hz"/>


                    <Label text="Frequency Waveform 2:" styleClass="label-bold"/>
                    <Slider fx:id="frequencySlider2" min="1" max="50" value="5"/>
                    <Label fx:id="sliderLabel2" text="7 Hz"/>

                    <LabeledComboBox fx:id="synthesisModeControl" text="Synthesis Mode: "/>
                </VBox>
            </ScrollPane>


            <fx:include source="WaveformChart.fxml" fx:id="waveformView"/>


        </SplitPane>

        <!-- Status Bar -->
        <HBox spacing="10" style="-fx-background-color: #e0e0e0;" alignment="CENTER_LEFT">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5" />
            </padding>
            <Label fx:id="statusLabel" text="Ready" />
        </HBox>

    </VBox>
</AnchorPane>
